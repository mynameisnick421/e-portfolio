@model IEnumerable<e_portfolio.Models.Project>

@{
    ViewData["Title"] = "Index";
}
<div id="projects_container">
    <div class="content projects_section">
        <h1>Some things <span class="red_ft">i've done.</span></h1>

        @*<p>
            <a asp-action="Create">Create New</a>
        </p>*@
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        <i class="fab fa-git"></i> @Html.DisplayNameFor(model => model.URL)
                    </th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.URL)">@Html.DisplayFor(modelItem => item.URL)</a>
                    </td>
                    @*<td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>*@
                </tr>
}
            </tbody>
        </table>

    </div>
    </div>
    
